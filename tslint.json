{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-namespace": false,
    "jsx-no-lambda": false,
    "interface-name": false,
    "no-console": false,
    "member-access": [
      true,
      "no-public"
    ],
    "curly": [
      true,
      "ignore-same-line"
    ]
  }
}
